<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp"
    android:elevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/gg"/>
        </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2.5dp">
                    <TextView
                        android:id="@+id/name_product_Cart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name Product "/>

                    <ImageView
                        android:id="@+id/delete_cart"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:translationX="220dp"
                        android:background="@drawable/ic_trash"/>
                </RelativeLayout>
                
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2.5dp">
                    
                    <TextView
                        android:id="@+id/textal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Talla : "/>

                    <TextView
                        android:id="@+id/price_cart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginLeft="15dp"
                        android:layout_toEndOf="@+id/textal"
                        android:layout_toRightOf="@+id/textal"
                        android:text="34"
                        />
                    
                </RelativeLayout>
                
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2.5dp">

                    <TextView
                        android:id="@+id/texpen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PEN."
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/tv_precio_cart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_toEndOf="@+id/texpen"
                        android:layout_toRightOf="@+id/texpen"
                        android:text="69.90"
                        android:textColor="@color/black"
                         />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/minus_cart"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="-8dp"
                        android:layout_marginRight="0dp"
                        android:layout_toStartOf="@+id/cero"
                        android:layout_toLeftOf="@+id/cero"
                        android:background="@drawable/ic_minus_box" />
                    <TextView
                        android:id="@+id/count_cart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:layout_marginTop="8dp"
                        android:textColor="@color/red"
                        android:translationX="185dp"/>

                    <ImageView
                        android:id="@+id/cero"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="-106dp"
                        android:layout_marginRight="5dp"
                        android:layout_toStartOf="@+id/plus_cart"
                        android:layout_toLeftOf="@+id/plus_cart"
                        android:background="@drawable/ic_cuadrado2" />


                    <ImageView
                        android:id="@+id/plus_cart"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"

                        android:layout_alignParentRight="true"
                        android:layout_marginEnd="112dp"
                        android:layout_marginRight="112dp"
                        android:background="@drawable/ic_plus_box"
                        android:translationX="100dp" />

                </RelativeLayout>


            </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>